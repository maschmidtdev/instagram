<%= turbo_frame_tag "post#{post.id}comments" do %>
  <% if post.comments.count > 0 %>
    <small class="text-muted"><%= pluralize(post.comments.count, "comment") %></small>
    <% post.comments.last(5).each do |comment|%>
      <p class="card-text m-0"><span class="fw-bold"><%= comment.user.username %></span> <%= comment.body %> </p>
    <% end %>
  <% end %>
<% end %>